{
    "name": "macmotp/locale",
    "version": "v0.1.0",
    "description": "A curated library to handle locale in PHP",
    "keywords": [
        "macmotp",
        "countries",
        "languages",
        "timezones",
        "locale",
        "localization",
        "php"
    ],
    "homepage": "https://github.com/macmotp/locale",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Gava",
            "email": "marco.gava@me.com",
            "homepage": "https://github.com/macmotp",
            "role": "Software Engineer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "illuminate/collections": ">=10.0",
        "macmotp/money": "^0.4.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.21",
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "Macmotp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Macmotp\\Country\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
